{% extends '::base.html.twig' %}

{% block body -%}
    <a href="{{path('deploy_main_homepage')}}" class="btn btn-default btn-lg">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span> Back
    </a>

    <h1>Server <small>list</small></h1>
    <hr>
    
    <a href="{{ path('server_new') }}" class="btn btn-default btn-lg">
      <span class=" glyphicon glyphicon-plus" aria-hidden="true"></span> Create a new entry
    </a>

    <hr>

    <table id="listing" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Ip</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('server_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.ip }}</td>
                    <td>
                        <a href="{{ path('server_edit', { 'id': entity.id }) }}" class="btn btn-primary btn-sm">
                          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
                        </a>
                        <a href="{{ path('server_delete', { 'id': entity.id }) }}" class="btn btn-danger btn-sm confirm-delete">
                          <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Delete
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
