{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Website</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Environment</th>
                <td>{{ entity.environment }}</td>
            </tr>
            <tr>
                <th>Sshuser</th>
                <td>{{ entity.sshUser }}</td>
            </tr>
            <tr>
                <th>Sshpwd</th>
                <td>{{ entity.sshPwd }}</td>
            </tr>
            <tr>
                <th>Sshpath</th>
                <td>{{ entity.sshPath }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('website') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('website_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
